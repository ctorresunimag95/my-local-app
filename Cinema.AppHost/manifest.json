{
  "$schema": "https://json.schemastore.org/aspire-8.0.json",
  "resources": {
    "sql": {
      "type": "container.v0",
      "connectionString": "Server={sql.bindings.tcp.host},{sql.bindings.tcp.port};User ID=sa;Password={sql-password.value};TrustServerCertificate=true",
      "image": "mcr.microsoft.com/mssql/server:2022-latest",
      "volumes": [
        {
          "name": "cinema.apphost-ba3410986b-sql-data",
          "target": "/var/opt/mssql",
          "readOnly": false
        }
      ],
      "env": {
        "ACCEPT_EULA": "Y",
        "MSSQL_SA_PASSWORD": "{sql-password.value}"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "port": 55425,
          "targetPort": 1433
        }
      }
    },
    "cinema": {
      "type": "value.v0",
      "connectionString": "{sql.connectionString};Initial Catalog=cinema"
    },
    "cache": {
      "type": "container.v0",
      "connectionString": "{cache.bindings.tcp.host}:{cache.bindings.tcp.port},password={cache-password.value}",
      "image": "docker.io/library/redis:7.4",
      "entrypoint": "/bin/sh",
      "args": [
        "-c",
        "redis-server --requirepass $REDIS_PASSWORD"
      ],
      "env": {
        "REDIS_PASSWORD": "{cache-password.value}"
      },
      "bindings": {
        "tcp": {
          "scheme": "tcp",
          "protocol": "tcp",
          "transport": "tcp",
          "targetPort": 6379
        }
      }
    },
    "serviceBus": {
      "type": "azure.bicep.v0",
      "connectionString": "{serviceBus.outputs.serviceBusEndpoint}",
      "path": "serviceBus.module.bicep"
    },
    "cosmosDb": {
      "type": "azure.bicep.v0",
      "connectionString": "{cosmosDb.outputs.connectionString}",
      "path": "cosmosDb.module.bicep"
    },
    "omdbApiKey": {
      "type": "parameter.v0",
      "value": "{omdbApiKey.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true
        }
      }
    },
    "management": {
      "type": "project.v0",
      "path": "../Cinema.Management/Cinema.Management.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{management.bindings.http.targetPort}",
        "omdb__apiKey": "{omdbApiKey.value}",
        "omdb__apiUrl": "https://www.omdbapi.com/",
        "ConnectionStrings__serviceBus": "{serviceBus.connectionString}",
        "ConnectionStrings__cosmosDb": "{cosmosDb.connectionString}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http"
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http"
        }
      }
    },
    "reservation-migration": {
      "type": "project.v0",
      "path": "../Cinema.Reservation.MigrationWorker/Cinema.Reservation.MigrationWorker.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ConnectionStrings__database": "{cinema.connectionString}"
      }
    },
    "reservation": {
      "type": "project.v0",
      "path": "../Cinema.Reservation/Cinema.Reservation.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{reservation.bindings.http.targetPort}",
        "ConnectionStrings__redis": "{cache.connectionString}",
        "ConnectionStrings__serviceBus": "{serviceBus.connectionString}",
        "ConnectionStrings__database": "{cinema.connectionString}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http"
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http"
        }
      }
    },
    "gateway": {
      "type": "project.v0",
      "path": "../Cinema.Gateway/Cinema.Gateway.csproj",
      "env": {
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EXCEPTION_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_EMIT_EVENT_LOG_ATTRIBUTES": "true",
        "OTEL_DOTNET_EXPERIMENTAL_OTLP_RETRY": "in_memory",
        "ASPNETCORE_FORWARDEDHEADERS_ENABLED": "true",
        "HTTP_PORTS": "{gateway.bindings.http.targetPort}",
        "services__management__http__0": "{management.bindings.http.url}",
        "services__management__https__0": "{management.bindings.https.url}",
        "services__reservation__http__0": "{reservation.bindings.http.url}",
        "services__reservation__https__0": "{reservation.bindings.https.url}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        },
        "https": {
          "scheme": "https",
          "protocol": "tcp",
          "transport": "http",
          "external": true
        }
      }
    },
    "cinema-web": {
      "type": "executable.v0",
      "workingDirectory": "../Cinema.Web",
      "command": "npm",
      "args": [
        "run",
        "start"
      ],
      "env": {
        "NODE_ENV": "development",
        "services__gateway__http__0": "{gateway.bindings.http.url}",
        "services__gateway__https__0": "{gateway.bindings.https.url}",
        "PORT": "{cinema-web.bindings.http.targetPort}"
      },
      "bindings": {
        "http": {
          "scheme": "http",
          "protocol": "tcp",
          "transport": "http",
          "port": 54163,
          "targetPort": 8000,
          "external": true
        }
      }
    },
    "serviceBus-roles": {
      "type": "azure.bicep.v0",
      "path": "serviceBus-roles.module.bicep",
      "params": {
        "servicebus_outputs_name": "{serviceBus.outputs.name}",
        "principalType": "",
        "principalId": ""
      }
    },
    "cosmosDb-roles": {
      "type": "azure.bicep.v0",
      "path": "cosmosDb-roles.module.bicep",
      "params": {
        "cosmosdb_outputs_name": "{cosmosDb.outputs.name}",
        "principalId": ""
      }
    },
    "sql-password": {
      "type": "parameter.v0",
      "value": "{sql-password.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true,
          "default": {
            "generate": {
              "minLength": 22,
              "minLower": 1,
              "minUpper": 1,
              "minNumeric": 1
            }
          }
        }
      }
    },
    "cache-password": {
      "type": "parameter.v0",
      "value": "{cache-password.inputs.value}",
      "inputs": {
        "value": {
          "type": "string",
          "secret": true,
          "default": {
            "generate": {
              "minLength": 22,
              "special": false
            }
          }
        }
      }
    }
  }
}